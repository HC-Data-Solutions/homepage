---
import Navbar from '../components/Navbar.astro';

const { title = 'HC Data Solutions' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg-color: #ffffff;
    --text-color: #1a1a1a;
    --border-color: #e5e7eb;
    --hover-color: #f3f4f6;
    --star-color: #000064;
  }

  .dark {
    --bg-color: #1a1a1a;
    --text-color: #ffffff;
    --border-color: #374151;
    --hover-color: #374151;
    --star-color: #00c0fc;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
    line-height: 1.6;
    color: var(--text-color);
    background-color: var(--bg-color);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Orbitron', sans-serif;
  }
</style>
