---
// Main page
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import FAQ from '../components/FAQ.astro';
import {
  ChartLine,
  Database,
  Code,
  TrendUp,
  ShieldCheck,
  Clock,
  MagnifyingGlass,
  Gear,
  CheckCircle,
  ChartBar,
  ChartPieSlice,
  FileSql,
  Lock,
  Cloud,
  Robot,
  ChartLineUp,
  Users,
  ChartScatter,
  FileXls,
} from '@phosphor-icons/react';
import CTA from '../components/CTA.astro';
---

<Layout>
  <main>
    <Hero />

    <section class="section">
      <h2>Data-Driven Solutions</h2>
      <p>
        We leverage cutting-edge technology and industry expertise to transform your data into
        actionable insights. Our solutions are tailored to meet your specific business needs,
        ensuring maximum efficiency and ROI.
      </p>
    </section>

    <section class="section two-column">
      <div class="column">
        <h2>Expert Team</h2>
        <p>
          Our team of data specialists brings years of experience across various industries. We
          combine technical excellence with business acumen to deliver solutions that drive real
          value for your organization.
        </p>
      </div>
      <div class="column image-column">
        <div class="image-placeholder">
          <span>Team Image</span>
        </div>
      </div>
    </section>

    <section class="section services">
      <h2>Our Services</h2>
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon">
            <ChartLine weight="duotone" size={48} />
          </div>
          <h3>Data Analytics</h3>
          <p>
            Transform raw data into actionable insights with advanced analytics and visualization
            tools.
          </p>
        </div>
        <div class="service-card">
          <div class="service-icon">
            <Database weight="duotone" size={48} />
          </div>
          <h3>Data Management</h3>
          <p>Efficiently store, organize, and maintain your data with robust database solutions.</p>
        </div>
        <div class="service-card">
          <div class="service-icon">
            <Code weight="duotone" size={48} />
          </div>
          <h3>Custom Solutions</h3>
          <p>Tailored software solutions designed to meet your specific business requirements.</p>
        </div>
      </div>
    </section>

    <section class="section benefits">
      <h2>Why Choose Us</h2>
      <div class="services-grid">
        <div class="service-card">
          <div class="service-icon">
            <TrendUp weight="duotone" size={48} />
          </div>
          <h3>Increased Efficiency</h3>
          <p>
            Streamline your operations and boost productivity with optimized data workflows and
            automated processes.
          </p>
        </div>
        <div class="service-card">
          <div class="service-icon">
            <ShieldCheck weight="duotone" size={48} />
          </div>
          <h3>Data Security</h3>
          <p>
            Rest easy knowing your data is protected with enterprise-grade security measures and
            compliance standards.
          </p>
        </div>
        <div class="service-card">
          <div class="service-icon">
            <Clock weight="duotone" size={48} />
          </div>
          <h3>24/7 Support</h3>
          <p>
            Get round-the-clock assistance and maintenance to ensure your systems run smoothly at
            all times.
          </p>
        </div>
      </div>
    </section>

    <section class="section process">
      <h2>Our Process</h2>
      <div class="process-grid">
        <div class="process-step">
          <div class="step-number">1</div>
          <div class="step-icon">
            <MagnifyingGlass weight="duotone" size={48} />
          </div>
          <h3>Discovery</h3>
          <p>
            We begin by understanding your unique needs, analyzing your current data infrastructure,
            and identifying opportunities for improvement.
          </p>
        </div>
        <div class="process-step">
          <div class="step-number">2</div>
          <div class="step-icon">
            <Gear weight="duotone" size={48} />
          </div>
          <h3>Implementation</h3>
          <p>
            Our team develops and implements tailored solutions, ensuring seamless integration with
            your existing systems.
          </p>
        </div>
        <div class="process-step">
          <div class="step-number">3</div>
          <div class="step-icon">
            <CheckCircle weight="duotone" size={48} />
          </div>
          <h3>Optimization</h3>
          <p>
            We continuously monitor and optimize your solutions, making adjustments to ensure
            maximum performance and ROI.
          </p>
        </div>
      </div>
    </section>

    <section class="section features">
      <h2>Our Capabilities</h2>
      <div class="features-grid">
        <div class="feature-item">
          <div class="feature-icon">
            <ChartBar weight="duotone" size={32} />
          </div>
          <h3>Business Intelligence</h3>
          <p>
            Interactive dashboards and reports that transform complex data into clear, actionable
            insights.
          </p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <ChartPieSlice weight="duotone" size={32} />
          </div>
          <h3>Data Visualization</h3>
          <p>
            Engaging charts and graphs that make your data story compelling and easy to understand.
          </p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <Database weight="duotone" size={32} />
          </div>
          <h3>Data Integration</h3>
          <p>Seamless connection of multiple data sources into a unified, accessible system.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <FileSql weight="duotone" size={32} />
          </div>
          <h3>SQL Development</h3>
          <p>Optimized database queries and stored procedures for efficient data retrieval.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <Lock weight="duotone" size={32} />
          </div>
          <h3>Data Security</h3>
          <p>Robust security measures ensuring your data remains protected and compliant.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <Cloud weight="duotone" size={32} />
          </div>
          <h3>Cloud Solutions</h3>
          <p>Scalable cloud infrastructure and services for modern data needs.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <Robot weight="duotone" size={32} />
          </div>
          <h3>AI & Machine Learning</h3>
          <p>Advanced analytics and predictive modeling for future-ready insights.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <ChartLineUp weight="duotone" size={32} />
          </div>
          <h3>Performance Analytics</h3>
          <p>Comprehensive analysis of system and business performance metrics.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <Users weight="duotone" size={32} />
          </div>
          <h3>User Analytics</h3>
          <p>Deep insights into user behavior and engagement patterns.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <ChartScatter weight="duotone" size={32} />
          </div>
          <h3>Statistical Analysis</h3>
          <p>Advanced statistical methods for data validation and correlation analysis.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <FileXls weight="duotone" size={32} />
          </div>
          <h3>Excel Integration</h3>
          <p>Seamless data export and import with Excel and other spreadsheet tools.</p>
        </div>
        <div class="feature-item">
          <div class="feature-icon">
            <ChartLine weight="duotone" size={32} />
          </div>
          <h3>Custom Analytics</h3>
          <p>Tailored analytical solutions for your specific business challenges.</p>
        </div>
      </div>
    </section>

    <section class="section">
      <FAQ />
    </section>
    <section class="section">
      <CTA />
    </section>
  </main>

  <footer>
    <p class="footer-text">&copy; Copyright 2025 - HC Data Solutions</p>
  </footer>
</Layout>

<style>
  .section {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .section h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, var(--text-color), #00c0fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .section p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
    opacity: 0.9;
  }

  .two-column {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .image-column {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-placeholder {
    width: 100%;
    aspect-ratio: 4/3;
    background: linear-gradient(45deg, var(--bg-color), var(--hover-color));
    border-radius: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--text-color);
    opacity: 0.5;
    font-size: 1.2rem;
  }

  .services {
    max-width: 1200px;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .service-card {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(45deg, var(--bg-color), var(--hover-color));
    border-radius: 1rem;
    transition: transform 0.2s;
  }

  .service-card:hover {
    transform: translateY(-5px);
  }

  .service-icon {
    margin-bottom: 1.5rem;
    color: var(--star-color);
  }

  .service-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .service-card p {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color);
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .section {
      padding: 3rem 1.5rem;
    }

    .section h2 {
      font-size: 2rem;
    }

    .two-column {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .image-placeholder {
      aspect-ratio: 16/9;
    }

    .services-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .service-card {
      padding: 1.5rem;
    }
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
    position: relative;
  }

  .process-grid::before {
    content: '';
    position: absolute;
    top: 48px;
    left: 15%;
    right: 15%;
    height: 2px;
    background: var(--star-color);
    opacity: 0.2;
    z-index: 1;
  }

  .process-step {
    text-align: center;
    padding: 2rem;
    background: linear-gradient(45deg, var(--bg-color), var(--hover-color));
    border-radius: 1rem;
    position: relative;
    z-index: 2;
  }

  .step-number {
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 40px;
    background: var(--star-color);
    color: var(--bg-color);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .step-icon {
    margin: 1rem 0 1.5rem;
    color: var(--star-color);
  }

  .process-step h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .process-step p {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-color);
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .process-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .process-grid::before {
      display: none;
    }

    .process-step {
      padding: 2rem 1.5rem;
    }
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1.5rem;
    background: linear-gradient(45deg, var(--bg-color), var(--hover-color));
    border-radius: 1rem;
    transition: transform 0.2s;
  }

  .feature-item:hover {
    transform: translateY(-3px);
  }

  .feature-icon {
    margin-bottom: 1rem;
    color: var(--star-color);
  }

  .feature-item h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--text-color);
  }

  .feature-item p {
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--text-color);
    opacity: 0.9;
  }

  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }

    .feature-item {
      padding: 1.25rem;
    }
  }

  .footer-text {
    font-size: 0.8rem;
    text-align: center;
    color: var(--text-color);
    opacity: 0.5;
    margin-bottom: 0.5rem;
  }
</style>
