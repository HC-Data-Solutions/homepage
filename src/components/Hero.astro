---
import { Star } from '@phosphor-icons/react';
---

<section class="hero">
  <div class="hero-content">
    <h1>Get ready for the next level of your business' growth</h1>
    <p class="subtitle">Bring structure, visibility, and scalability to your growing operations.</p>
    <a class="cta-button">Start Your Growth Plan</a>
  </div>
  <div class="star-decoration">
    <Star weight="fill" size={24} />
    <Star weight="fill" size={24} />
    <Star weight="fill" size={24} />
    <Star weight="fill" size={24} />
    <Star weight="fill" size={24} />
  </div>
  <div class="animated-background">
    <div class="gradient-sphere"></div>
    <div class="gradient-sphere"></div>
    <div class="gradient-sphere"></div>
    <div class="gradient-sphere"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: 2rem;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--bg-color) 20%,
      var(--bg-color) 80%,
      transparent
    );
  }

  .hero::before,
  .hero::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 100px;
    z-index: 2;
  }

  .hero::before {
    top: 0;
    background: linear-gradient(to bottom, var(--bg-color), transparent);
  }

  .hero::after {
    bottom: 0;
    background: linear-gradient(to top, var(--bg-color), transparent);
  }

  .star-decoration {
    position: absolute;
    bottom: 50px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
    color: var(--star-color);
  }

  :global(.dark) .star-decoration {
    color: #00c0fc;
  }

  .star-decoration svg {
    animation: none;
  }

  .star-decoration svg:nth-child(2) {
    animation-delay: 0s;
  }

  .star-decoration svg:nth-child(3) {
    animation-delay: 0s;
  }

  .star-decoration svg:nth-child(4) {
    animation-delay: 0s;
  }

  .star-decoration svg:nth-child(5) {
    animation-delay: 0s;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
    max-width: 800px;
  }

  h1 {
    font-family: 'Orbitron', sans-serif;
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    background: linear-gradient(45deg, var(--text-color), #00c0fc);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: fadeInUp 1s ease-out;
  }

  .subtitle {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: var(--text-color);
    opacity: 0.9;
    animation: fadeInUp 1s ease-out 0.2s backwards;
  }

  .cta-button {
    padding: 1rem 2rem;
    font-size: 1.1rem;
    background: linear-gradient(45deg, #000064, #000098);
    color: white;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
    animation: fadeInUp 1s ease-out 0.4s backwards;
  }

  .cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0, 0, 100, 0.3);
  }

  .animated-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .gradient-sphere {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle at center, rgba(0, 192, 252, 0.2), transparent 70%);
    animation: float 25s infinite ease-in-out;
  }

  .gradient-sphere:nth-child(1) {
    width: 600px;
    height: 600px;
    top: -200px;
    left: -200px;
    animation-delay: 0s;
  }

  .gradient-sphere:nth-child(2) {
    width: 400px;
    height: 400px;
    top: 20%;
    right: -200px;
    animation-delay: -8s;
  }

  .gradient-sphere:nth-child(3) {
    width: 550px;
    height: 550px;
    bottom: -200px;
    left: 20%;
    animation-delay: -16s;
  }

  .gradient-sphere:nth-child(4) {
    width: 350px;
    height: 350px;
    top: 10%;
    left: 10%;
    animation-delay: -4s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0, 0) rotate(0deg);
    }
    25% {
      transform: translate(100px, 100px) rotate(90deg);
    }
    50% {
      transform: translate(0, 200px) rotate(180deg);
    }
    75% {
      transform: translate(-100px, 100px) rotate(270deg);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.1rem;
    }
  }
</style>
